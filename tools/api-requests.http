// Testes da API - use com Postman, cURL ou insomnia

// ============================================
// ATLETAS
// ============================================

// 1. GET - Listar todos atletas
GET http://localhost:5000/api/athletes

// 2. GET - Obter atleta por ID
GET http://localhost:5000/api/athletes/1

// 3. POST - Criar novo atleta
POST http://localhost:5000/api/athletes
Content-Type: application/json

{
  "name": "Lucas Mendes",
  "age": 26,
  "weight": 77,
  "belt": "Azul",
  "style": "Explosão",
  "strongAttacks": "Tapioca, Queda rápida, Raspagem aérea",
  "weaknesses": "Defesa de pressão constante",
  "cardio": 88,
  "videoUrl": "https://youtube.com/watch?v=lucas"
}

// 4. PUT - Atualizar atleta
PUT http://localhost:5000/api/athletes/1
Content-Type: application/json

{
  "cardio": 90,
  "strongAttacks": "Raspagem aperfeiçoada, Armlock de omoplata"
}

// 5. DELETE - Deletar atleta
DELETE http://localhost:5000/api/athletes/1

